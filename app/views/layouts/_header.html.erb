<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to t(:app_header), root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to t(:home_page), root_path %></li>
          <li><%= link_to t(:help_page), help_path %></li>
          <% if signed_in? %>
            <li><%= link_to t(:users_page), users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t(:account_dropdown) %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(:profile_page), current_user %></li>
                <li><%= link_to t(:settings_page), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t(:signout), signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t(:signin), signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>